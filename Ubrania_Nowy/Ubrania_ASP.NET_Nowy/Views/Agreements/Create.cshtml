@model Ubrania_ASP.NET_Nowy.Models.Agreement

@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Stwórz Umowę</h2>
<br />
<h4>Nowa Umowa</h4>
<hr />
<form asp-action="Create">
    <div class="form-border">


        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Surname" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Surname" class="form-control" />
            </div>
            <span asp-validation-for="Surname" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Tel" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Tel" class="form-control" />
            </div>
            <span asp-validation-for="Tel" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Pesel" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Pesel" class="form-control" />
            </div>
            <span asp-validation-for="Pesel" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Begin" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="Begin" class="form-control" />
            </div>
            <span asp-validation-for="Begin" class="text-danger"></span>

        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="End" class="control-label"></label>
            </div>
            <div class="col-4">
                <input asp-for="End" class="form-control" />
            </div>
            <span asp-validation-for="End" class="text-danger"></span>

        </div>

        <div class="form-group">
            <input type="submit" value="Dodaj" class="btn btn-primary" />&nbsp;
            <a asp-action="Index" class="btn btn-success">Wróć do listy</a>
        </div>


    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
